<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:background="#FFFFFF">



    <LinearLayout
        android:id="@+id/le1"
        android:layout_width="wrap_content"
        android:layout_height="498dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="365dp"
            android:layout_height="533dp"
            android:src="@drawable/yellow_bus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"

                android:backgroundTint="#F43636"
                android:drawableTop="@drawable/setting_icon"
                android:text="설정"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/streaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:backgroundTint="#FF5A5A"
                android:drawableTop="@drawable/play_icon"
                android:text="스트리밍"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:backgroundTint="#FFE400"
                android:drawableTop="@drawable/check_icon"
                android:text="좌석 매핑"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:backgroundTint="#8C8C8C"
                android:drawableTop="@drawable/exit_icon"
                android:text="종료"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/external_full_screen"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:backgroundTint="#FFBB00"
            android:drawableTop="@drawable/full_screen01"
            android:text="실외 전체화면"
            android:textColor="#FFFFFF"
            android:textSize="28dp" />

        <Button
            android:id="@+id/inside_full_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:backgroundTint="#FFBB00"
            android:drawableTop="@drawable/full_screen01"
            android:text="실내 전체화면"
            android:textColor="#FFFFFF"
            android:textSize="28dp" />
    </LinearLayout>

</LinearLayout>
